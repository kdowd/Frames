<Window x:Class="Frames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frames"
        mc:Ignorable="d"
        Background="LightPink"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Rectangle Fill="Black" Grid.Row="0" />

        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="auto">
            <Button Click="OnPageOne">Page One</Button>
            <Button Margin="20 0 20 0 " Click="OnPageTwo">Page Two</Button>
            <Button Click="OnPageThree">Page Three</Button>
        </WrapPanel>


        <Frame NavigationUIVisibility="Hidden" Source="Pages/Page1.xaml" Grid.Row="1" x:Name="MainFrame" Background="Azure"   />

    </Grid>
</Window>
